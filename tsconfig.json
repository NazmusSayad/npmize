{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "bin",
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext", "dom"],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "traceResolution": false,
    "strictNullChecks": true,
    "removeComments": true,
    "noImplicitAny": false,
    "types": ["node"]
  },
  "compileOnSave": false,
  "include": ["src"]
}
